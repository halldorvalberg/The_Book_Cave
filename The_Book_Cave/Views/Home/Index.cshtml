
<div id="slideshow">
   <div>
       <img src="~/images/banner1.png" alt="banner1">
   </div>
   <div>
        <a href="http://www.ikea.is">
            <img src="~/images/banner2.png" alt="banner1">
        </a>
   </div>
   <div>
        <img src="~/images/banner3.png" alt="banner1">
   </div>
</div>

<div class="white-tab">
    <h1><a asp-controller="Category" asp-action="Details" asp-route-id="1">Barna- og Unglingabækur</a></h1>
    <div class="book-showbox-wrapper">
        @foreach (var book in ViewBag.a) 
        {
            <div class="book-showbox">
                <div class="book-showbox-image">
                    <a asp-controller="Book" asp-action="Details" asp-route-id="@book.Id">
                        <img src="@book.Image" alt="@book.Title">
                    </a>
                </div>
                <div class="book-showbox-info">
                    <a asp-controller="Book" asp-action="Details" asp-route-id="@book.Id">
                        <h1>@book.Title</h1>
                    </a>
                    <p>@book.Price kr.</p>
                </div>
                <div class="book-showbox-aciton">
                    <div onclick="itemadded(@book.Id)"  id="div-onclick">
                        @Html.ActionLink("Bæta í körfu", "AddToCart",
                        "ShoppingCart", 
                        new { bookId = @book.Id }, 
                        new { @class = "addToCart btn btn-danger addcart"})
                </div>
                </div>
            </div>
        }
    </div>
</div>
