<div class="white-tab">
    <h1>Barna- og Unglingabækur (spurning: hægt að klikka á flokka?)</h1>
    <div class="book-showbox-wrapper">
        @foreach (var book in ViewBag.a) 
        {
            <div class="book-showbox">
                <div class="book-showbox-image">
                    <a asp-controller="Book" asp-action="Details" asp-route-id="@book.Id">
                        <img src="@book.Image" alt="@book.Title">
                    </a>
                </div>
                <div class="book-showbox-info">
                    <a asp-controller="Book" asp-action="Details" asp-route-id="@book.Id">
                        <h1>@book.Title</h1>
                    </a>
                    <p>@book.Price kr.</p>
                </div>
                <div class="book-showbox-aciton">
                    <a class="btn btn-success" id="cartButton" asp-controller="ShoppingCart" asp-action="AddToShoppingCart" asp-route-bookid="@book.Id">
                        Add to cart
                    </a>
                </div>
            </div>
        }
    </div>
</div>
