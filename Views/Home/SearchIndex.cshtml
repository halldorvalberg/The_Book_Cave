@model List<The_Book_Cave.Models.ViewModels.BookListViewModel>

<div class="white-tab">
  <h1>Niðurstöður leitar</h1>
    <div class="book-showbox-wrapper">
   @foreach (var book in Model) 
        {
            <div class="book-showbox">
                <div class="book-showbox-image">
                    <a asp-controller="Book" asp-action="Details" asp-route-id="@book.Id">
                        <img src="@book.Image" alt="@book.Title">
                    </a>
                </div>
                <div class="book-showbox-info">
                    <h1>@book.Title</h1>
                </div>
                <div class="book-showbox-aciton">
                    <form asp-controller="ShoppingCart" asp-action="Index" asp-route-id="@book.Id" class="detail-buy">
                        <input type="submit" class="btn btn-primary" value="Bæta í Körfu" />
                    </form>
                </div>
            </div>
        }
    </div>
</div>
