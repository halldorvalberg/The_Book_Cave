@model The_Book_Cave.Models.ViewModels.ProfileViewModel 

<h1>Uppfæra persónuupplýsingar</h1>

<form asp-action="MyProfile" asp-controller="Account" class="form-horizontal" method="POST">
    <div class="detail-image">
            <img src="@Model.Image" alt="">
        </div>
    <div class="form-group">
        <input type="text" autofocus="autofocus" class="form-control" asp-for="FirstName" placeholder="Enter your first name.." value="@Model.FirstName"/>
    </div>
    <div class="form-group">
        <input type="text" autofocus="autofocus" class="form-control" asp-for="LastName" placeholder="Enter your last name.." value="@Model.FirstName"/>
    </div>
    <div class="form-group">
        <input type="text" autofocus="autofocus" class="form-control" asp-for="Address" placeholder="Enter your address.." value="@Model.Address"/>
    </div>
    <div class="form-group">
        <input type="text" autofocus="autofocus" class="form-control" asp-for="FavoriteBook" placeholder="Enter your favorite book.." value="@Model.FavoriteBook"/>
    </div>
    <div class="form-group">
        <input type="submit" class="btn btn-default" value="Uppfæra"/>  
    </div>
</form>