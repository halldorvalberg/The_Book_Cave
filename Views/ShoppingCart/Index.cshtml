@model List<The_Book_Cave.Models.ViewModels.BookListViewModel>
  

<h1>Karfan Þín</h1>

<div class="book-items">
    @foreach(var book in Model)
    {
        <div class="book-item-thumb">
            <div class="book-item-image"> 
                <a asp-controller="Book" asp-action="Details" asp-route-id="@book.Id">
                    <img src="@book.Image" alt="~/images/250x250image.png">
                </a>
            <div class="book-item-info-cart">
                <h3>@book.Price kr.</h3>
                <p>@book.Quantity stk</p> 
            </div>
            </div>
            <div class="book-item-action">
                <span> 
                    @Html.ActionLink("", "RemoveFromCart", "ShoppingCart", 
                            new { bookId = @book.Id }, 
                            new { @class= "glyphicon glyphicon-trash" })
                </span>
            </div>
        </div>       
    }
</div>
<p>Samtals verð: @ViewBag.CartTotal kr.</p>
@if(ViewBag.CartTotal != 0)
{
    <form asp-controller="ShoppingCart" asp-action="CheckOut">
        <input class="btn btn-success btn-lg btn-block" id="p2-btn" type="submit" value="Klára pöntun">
    </form>
}
