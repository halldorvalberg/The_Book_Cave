@model List<The_Book_Cave.Models.ViewModels.BookListViewModel>


<a asp-controller="Home" asp-action="Index"><< Fara til baka</a>
<h3>Karfan þín</h3>

<h5 class="Total">Verð samtals:<span><button type="button">Kaupa</button></span> </h5>

<div class="book-items">
    @foreach(var book in Model)
    {
        <div class="BooksByOrder book-item-thumb">
            <div class="book-item-image">
                <a asp-controller="Book" asp-action="Details" asp-route-id="@book.Id">
                    <img src="@book.Image" alt="~/images/250x250image.png">
                </a>
            </div>
            <div class="book-item-info">
                <h3>
                    <a asp-controller="Book" asp-action="Details" asp-route-id="@book.Id"><span style="font-weight:bold">@book.Title</span></a>
                </h3>
                <p>@book.Price kr.</p>
            </div>
        </div>
    }
</div>