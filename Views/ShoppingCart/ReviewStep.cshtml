@model The_Book_Cave.Models.ViewModels.OrderViewModel

<div>
    <h2>Review</h2>
        <table class="table table-striped table-hover">
            <tr>
                <th>Address</th>
                <td>@Model.Address</td>
            </tr>
            <tr>
                <th>City</th>
                <td>@Model.City</td>
            </tr>
            <tr>
                <th>Country</th>
                <td>@Model.Country</td>
            </tr>
            <tr>
                <th>ZipCode</th>
                <td>@Model.ZipCode</td>
            </tr>
            <tr>
                <th>Cart Total Price</th>
                <td>@ViewBag.CartTotal kr</td>
            </tr>
        </table>
        <a class="btn btn-default" asp-controller="ShoppingCart" asp-action="ConfirmationStep">Confirm</a>
        <a class="btn btn-default" asp-controller="ShoppingCart" asp-action="Checkout">Edit</a>
</div>