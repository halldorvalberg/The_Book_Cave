@model The_Book_Cave.Models.InputModels.OrderInputModel


<form class="form-horizontal" method="POST">
    <div class="form-group">
        <label class="control-label col-sm-2" for="Name">Name</label>
        <div class="col-sm-10">
            <input type="text" class="form-control" asp-for="Name" placeholder="Name">
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group">
        <label class="control-label col-sm-2" for="Address">Address</label>
        <div class="col-sm-10">
            <input type="text" class="form-control" asp-for="Address" placeholder="Address">
            <span asp-validation-for="Address" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group">
        <label class="control-label col-sm-2" for="City">City</label>
        <div class="col-sm-10">
            <input type="text" class="form-control" asp-for="City" placeholder="City">
            <span asp-validation-for="City" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group">
        <label class="control-label col-sm-2" for="ZipCode">ZipCode</label>
        <div class="col-sm-10">
            <input type="text" class="form-control" asp-for="ZipCode" placeholder="ZipCode">
            <span asp-validation-for="ZipCode" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group">
        <label class="control-label col-sm-2" for="Country"></label>
        <div class="col-sm-10">
            <select class="form-control" id="country" name="Country">
                <option value="">Select a country</option>
                <option value="Canada">Canada</option>
                <option value="Denmark">Denmark</option>
                <option value="Finland">Finland</option>
                <option value="France">France</option>
                <option value="Germany">Germany</option>
                <option value="Iceland">Iceland</option>
                <option value="Ireland">Ireland</option>
                <option value="Italy">Italy</option>
                <option value="Norway">Norway</option>
                <option value="Sweden">Sweden</option>
                <option value="United Kingdom">United Kingdom</option>
                <option value="United States">United States</option>
            </select>
            <span asp-validation-for="Country" class="text-danger"></span>
        </div>
    </div>
    <input type="submit" value="Proceed to next step" class="btn btn-default">
    <a asp-controller="Home" asp-action="Index"><input type="button" value="Cancel" class="btn btn-danger"></a>
</form>